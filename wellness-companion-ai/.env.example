# TASK 3: Environment Configuration
# File 1: wellness-companion-ai/.env.example

# === DATABASE CONFIGURATION ===
POSTGRES_DB=wellness_companion
POSTGRES_USER=wellness_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# === REDIS CONFIGURATION ===
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_HOST=redis
REDIS_PORT=6379

# === AI/ML SERVICES ===
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
QDRANT_HOST=qdrant
QDRANT_PORT=6333
TAVILY_API_KEY=your_tavily_api_key_here

# === AUTHENTICATION ===
JWT_SECRET_KEY=your_super_secret_jwt_key_minimum_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# AWS Cognito
AWS_COGNITO_USER_POOL_ID=your_cognito_user_pool_id
AWS_COGNITO_CLIENT_ID=your_cognito_client_id
AWS_COGNITO_CLIENT_SECRET=your_cognito_client_secret
AWS_COGNITO_REGION=us-east-1

# === AWS CONFIGURATION ===
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=wellness-companion-storage

# === SERVICE URLS (Internal Docker Network) ===
CORE_BACKEND_URL=http://core-backend:8000
AIML_SERVICE_URL=http://aiml-orchestration:8000
DATA_LAYER_URL=http://data-layer:8000

# === EXTERNAL SERVICE URLS ===
NGINX_URL=http://nginx:80
FRONTEND_URL=http://localhost:3000

# === MONITORING & LOGGING ===
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_PASSWORD=your_grafana_admin_password

# === DEVELOPMENT SETTINGS ===
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

# === SECURITY SETTINGS ===
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# === FILE UPLOAD SETTINGS ===
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,docx,txt,md
UPLOAD_DIRECTORY=/app/uploads

# === MODEL SETTINGS ===
EMBEDDING_MODEL=all-MiniLM-L6-v2
LLM_MODEL=gemma:3b
CONFIDENCE_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=4096

# === DOCKER SETTINGS ===
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1