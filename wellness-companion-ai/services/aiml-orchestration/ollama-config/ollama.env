# services/aiml-orchestration/ollama-config/ollama.env
# Ollama Environment Configuration for Wellness Companion AI

# === OLLAMA SERVICE CONFIGURATION ===
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434
OLLAMA_ORIGINS=*
OLLAMA_DEBUG=false

# === MODEL CONFIGURATION ===
OLLAMA_MODELS=/root/.ollama/models
OLLAMA_RUNNERS_DIR=/tmp/ollama_runners

# === PERFORMANCE SETTINGS ===
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=1
OLLAMA_MAX_QUEUE=512
OLLAMA_FLASH_ATTENTION=false
OLLAMA_GPU_OVERHEAD=0
OLLAMA_LOAD_TIMEOUT=5m
OLLAMA_REQUEST_TIMEOUT=5m

# === MEMORY MANAGEMENT ===
OLLAMA_MAX_VRAM=0
OLLAMA_NOHISTORY=false
OLLAMA_KEEP_ALIVE=5m

# === SECURITY ===
OLLAMA_ALLOW_ORIGINS=localhost,127.0.0.1,wellness_*
OLLAMA_DISABLE_DOCS=false

# === LOGGING ===
OLLAMA_VERBOSE=1
OLLAMA_LOG_LEVEL=INFO